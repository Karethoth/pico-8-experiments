pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
--core
p = {
	x = 5,
	y = 5,
	flipped = false,
	mov = {0,0}
}

function _init()
end

function _update()
	if btnp(➡️) then
		p.mov[1] = 1
	end
	if btnp(⬅️) then
		p.mov[1] = -1
	end
	if btnp(⬇️) then
		p.mov[2] = 1
	end
	if btnp(⬆️) then
		p.mov[2] = -1
	end
	
	if p.mov[1] != 0 or p.mov[2] != 0 then
		p.x += p.mov[1]
		p.y += p.mov[2]
		if p.mov[1] > 0 then
			p.flipped = false;
		end
		if p.mov[1] < 0 then
			p.flipped = true;
		end
		p.mov = {0,0}
	end
end

function _draw()
	cls()
	spr(1,p.x*8,p.y*8,1,1,p.flipped)
end
