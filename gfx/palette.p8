__lua__
local delay = 0.05
local last  = t()

function _init()
	palette_offset = 0
	palt(0, false)
end

function _update()
 if (t() - last) < delay then
 	return
 end
 
	for i=0,16 do
		pal(i,(i+palette_offset)%16)
	end
	
	palette_offset += 1
	if palette_offset > 15 then
		palette_offset = 0
	end
	last = t()
end

function _draw()
	cls()
	spr(1,10,10)
	spr(2,18,10)
end
